{
    "name": "gamez/mite-api-authentication",
    "description": "Authentication middlewares to support access to the mite API",
    "keywords": ["mite", "guzzle", "httplug", "http", "middleware"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jérôme Gamez",
            "email": "jerome@gamez.name"
        }
    ],
    "require": {
        "php": "^7.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^6.0",
        "php-http/message": "^1.0",
        "phpunit/phpunit": "^6.0|^7.0"
    },
    "suggest": {
        "guzzlehttp/guzzle": "For using the GuzzleHttp middleware",
        "php-http/client-common": "For using the HTTPlug authentication"
    },
    "autoload": {
        "psr-4": {
            "Gamez\\Mite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gamez\\Mite\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
